# Environment Variables for Vercel Deployment
# Copy these to your Vercel project settings

# Database
DATABASE_URL=your_postgresql_connection_string
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Authentication
JWT_SECRET=your_jwt_secret_key
SESSION_SECRET=your_session_secret_key

# CORS
ALLOWED_ORIGINS=https://your-app-name.vercel.app,http://localhost:5173

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Upload Path (for Vercel, use /tmp)
UPLOAD_PATH=/tmp/uploads

# Node Environment
NODE_ENV=production

# Encryption for wallet keys
ENCRYPTION_KEY=your_32_character_encryption_key

# Bitcoin/Crypto Configuration
BITCOIN_NETWORK=testnet
BITCOIN_RPC_URL=your_bitcoin_rpc_url
BITCOIN_RPC_USER=your_rpc_user
BITCOIN_RPC_PASS=your_rpc_password

# USDT Configuration
USDT_CONTRACT_ADDRESS=your_usdt_contract_address
ETHEREUM_RPC_URL=your_ethereum_rpc_url
